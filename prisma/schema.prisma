generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Nutrient {
  id          Int      @id @default(autoincrement())
  name        String
  brand       String?
  weight      Float
  unit        String
  calories    Decimal
  carbs       Decimal
  protein     Decimal
  fat         Decimal
  description String?
  source      String?
  category    String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
